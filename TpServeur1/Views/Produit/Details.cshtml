@model TpServeur1.Models.Produit

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Taille)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Taille)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QteInventaire)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QteInventaire)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prix)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categorie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categorie.Id)
        </dd>
        @if (Model.ImageId != null)
        {

            <dd class="col-sm-10">
                <img class="img-thumbnail img-responsive rounded" src="@string.Format("data:{0};base64,{1}", Model.Image.ContentType, Convert.ToBase64String(Model.Image.ImageData))" width="500" height="500" />
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Retour</a>
</div>
</body>
</html>
