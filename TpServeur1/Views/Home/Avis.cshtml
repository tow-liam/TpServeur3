@{
    ViewData["Title"] = "Donnez votre avis!";
}
<header>
    <div>
        <img class="img-fluid" alt="Responsive image" src="images/facebook_cover_photo_1.png" />
    </div>
</header>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="DonnezAvis">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserGuid" class="control-label"></label>
                        <input asp-for="UserGuid" class="form-control" />
                        <span asp-validation-for="UserGuid" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>