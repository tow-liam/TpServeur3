@model IEnumerable<TpServeur1.Models.Produit>

<!DOCTYPE html>


<body>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class=".col-sm-4">
                    <div class="card">
                        @if (item.ImageId != null)
                        {
                            <img class="card-img-top img-responsive" alt="..." src="@string.Format("data:{0};base64,{1}", item.Image.ContentType, Convert.ToBase64String(item.Image.ImageData))" width="100" height="100" />
                        }
                        <div class="card-body">
                            <p class="card-text">
                                @Html.DisplayFor(modelItem => item.Nom)
                            </p>
                            <p class="card-text">
                                Disponibles: @Html.DisplayFor(modelItem => item.QteInventaire)
                            </p>
                            <p class="card-text">
                                Prix: @Html.DisplayFor(modelItem => item.Prix)
                            </p>
                            <a asp-action="Details" asp-controller="Produit" asp-route-id="@item.Id" class="btn btn-primary">Détails</a>
                            @if (item.QteInventaire > 0)
                            {
                                <a class="btn btn-primary" asp-action="AjoutPanier" asp-controller="Produit" asp-route-id="@item.Id">Ajouter au panier</a>
                                    }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
